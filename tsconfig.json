{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
  "target": "es2022",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "incremental": true,
  "strict": true,
  "lib": ["es2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
